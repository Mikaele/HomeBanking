<h1>Listing conta</h1>

<p>
    <%= link_to 'Nova Conta', new_contum_path, class:"btn" %>
</p>

<table class="table table-hover table-condensed">
  <thead>
  <tr>
    <th>Numero</th>
    <th>Primeiro corr</th>
    <th>Segundo corr</th>
    <th>Terceiro corr</th>
    <th>Saldo</th>
    <th>Limite</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
<% @conta.each do |contum| %>
  <tr>
    <td><%= contum.numero %></td>
    <td><%= contum.primeiro_corr %></td>
    <td><%= contum.segundo_corr %></td>
    <td><%= contum.terceiro_corr %></td>
    <td><%= contum.saldo %></td>
    <td><%= contum.limite %></td>
    <td><%= link_to 'Visualizar', contum, class:"btn btn-primary" %></td>
    <td><%= link_to 'Editar', edit_contum_path(contum), class:"btn btn-warning" %></td>
    <td><%= link_to 'Apagar', contum, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-destroy" %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

    <td><%= link_to 'Editar', edit_transacao_path(transacao), class:"btn btn-warning" %></td>
    <td><%= link_to 'Apagar', transacao, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
  </tr>
<% end %>
</tbody>
</table>
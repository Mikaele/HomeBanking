<h1 class="text-center">Todas as Transações</h1>

<%= link_to 'Nova Transação', new_transacao_path, class:"btn" %>

<table class="table table-hover table-condensed">
  <tr>
    <th>Codigo</th>
    <th>Tipo</th>
    <th>Nro conta</th>
    <th>Nro conta transf</th>
    <th>Valor</th>
    <th>Data</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
<% @transacaos.each do |transacao| %>
  <tr>
    <td><%= transacao.codigo %></td>
    <td><%= transacao.tipo %></td>
    <td><%= transacao.nro_conta %></td>
    <td><%= transacao.nro_conta_transf %></td>
    <td><%= transacao.valor %></td>
    <td><%= transacao.data %></td>
